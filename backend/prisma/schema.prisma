generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.sqlite"
}

model User {
    id          Int     @id @default(autoincrement())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    email       String  @unique
    password    String
    courses     Course[]
    messages    Message[]
}

model Course {
    id          Int     @id @default(autoincrement())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    author      User    @relation(fields: [authorId], references: [id])
    authorId    Int
    name        String
    description String
    lessons     Lesson[]
    messages    Message[]
}

model Lesson {
    id          Int     @id @default(autoincrement())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    course      Course  @relation(fields: [courseId], references: [id])
    courseId    Int
    name        String
    description String
    content     String
}

model Message {
    id          Int @id @default(autoincrement())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    course      Course @relation(fields: [courseId], references: [id])
    author      User @relation(fields: [authorId], references: [id])
    authorId    Int
    courseId    Int
    content     String
}

model Asset {
    id          Int @id @default(autoincrement())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    mimetype    String
    data        Bytes
}

